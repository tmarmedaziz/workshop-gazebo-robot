<launch>
    <include file="$(find skid_steer_robot)/launch/robot_description.launch"/>

    <node name="EncoderData" pkg="localization" type="encode_data.py" output="screen">
        <param name="use_sim_time" value="false" />
    </node>

    <node name="NoisyDataEncoder" pkg="localization" type="noisy_encoder.py" output="screen">
        <param name="use_sim_time" value="false" />
    </node>
    
    <node name="IMUData" pkg="localization" type="IMU_data.py" output="screen">
        <param name="use_sim_time" value="false" />
    </node>

    <node name="EncoderKalmanFilterNode" pkg="localization" type="KF_noisy_encode_data.py" output="screen">
        <param name="use_sim_time" value="false" />
    </node>

    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_filter" output="screen">
        <param name="use_sim_time" value="false" />
        <param name="publish_tf" value="false" />
        <param name="config" value="$(find localization)/scripts/ekf.yaml" />
      </node>

</launch>
